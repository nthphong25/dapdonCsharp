<Window
    x:Class="dapdon.Views.MoSelectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Chọn MO"
    Width="700"
    Height="500"
    WindowStartupLocation="CenterOwner">
    <Grid Margin="0,0,0,2">
        <StackPanel Margin="10">
            <!--  ComboBox để chọn MO Number  -->
            <!--<TextBlock
                Margin="0,0,0,5"
                FontWeight="Bold"
                Text="Chọn MO Number:" />
            <ComboBox
                x:Name="MoComboBox"
                Width="200"
                ItemsSource="{Binding MoNoList}"
                SelectedItem="{Binding SelectedMoNo, Mode=TwoWay}" />-->



            <!--  DataGrid hiển thị số lượng EPC của từng MO Number  -->
            <TextBlock
                Margin="0,10,0,5"
                FontWeight="Bold"
                Text="Số lượng EPC theo MO:" />
            <DataGrid
                Width="500"
                Height="250"
                Margin="5"
                HorizontalAlignment="Left"
                AutoGenerateColumns="False"
                ColumnWidth="*"
                FontSize="16"
                ItemsSource="{Binding MoEpcCounts}">
                <DataGrid.Columns>
                    <!--  Cột hiển thị MO Number  -->
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding MoNo}"
                        Header="MO Number" />

                    <!--  Cột hiển thị số lượng EPC  -->
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding EpcCount}"
                        Header="Số lượng EPC" />

                    <!--  Cột chứa ComboBox  -->
                    <DataGridTemplateColumn Header="Chọn">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox
                                    Width="100"
                                    ItemsSource="{Binding MoNoSelectList}"
                                    SelectedItem="{Binding SelectedMoNo, Mode=TwoWay}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>



                    <DataGridTemplateColumn Header="Hành động">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Xử lý"  Width="80"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>


            <!--  Nút xác nhận  -->
            <!--<Button
                Width="100"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                Click="ConfirmButton_Click"
                Content="Xác nhận" />-->
        </StackPanel>

    </Grid>
</Window>
