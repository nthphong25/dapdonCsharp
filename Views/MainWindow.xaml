<Window x:Class="dapdon.Views.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EPC Viewer" Height="700" Width="1200">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Content="Clear List" 
                    Click="ClearButton_Click"
                    Width="100" Height="60" 
                    Margin="5"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="#f44336" 
                                            BorderBrush="#f44336"
                                            BorderThickness="2"
                                            CornerRadius="3" 
                                            Padding="1">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Merge MoNo" 
                        Click="OpenModal_Click"
                        Width="130" Height="60" FontSize="15" Margin="50,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="#04AA6D" 
                                         BorderBrush="Green"
                                         BorderThickness="2"
                                         CornerRadius="3" 
                                         Padding="1">
                                            <ContentPresenter HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            <TextBlock FontSize="25" FontWeight="Bold" Foreground="Black"
               HorizontalAlignment="Left" Margin="10">
				<Run Text="EPC Scanned: "/>
				<!-- Phần cố định -->
				<Run Text="{Binding EpcCount}" />
				<!-- Phần động -->
            </TextBlock>
            <DataGrid ItemsSource="{Binding EpcMoList}" Height="550" AutoGenerateColumns="False" Margin="5"
                  FontSize="16" HorizontalAlignment="Stretch"
                  FrozenColumnCount="4"
                  ColumnWidth="*">
                <!-- Tự động điều chỉnh độ rộng cột -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="EPC" Binding="{Binding EPC}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="MONO" Binding="{Binding MoNo}" >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Color" Binding="{Binding MatColor}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <!-- Căn trái -->
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Left"/>
                                <!-- Đảm bảo căn trái -->
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Style" Binding="{Binding ShoeStyle}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
                <!-- Tăng cỡ chữ và căn giữa tiêu đề -->
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>